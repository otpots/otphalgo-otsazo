<mapper namespace="cart">
	<!-- <select id="selectall" resultType="cartvo">
		select p.code, p.name, p.price, p.image, c.count, p.price*c.count total from pro p, cart c where p.code=c.pro_code and c.buyer_num='#{buyer_num}';
