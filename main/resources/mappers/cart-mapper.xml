	<select id="selectAllCart" parameterType="memvo" resultType="cartvo">
		select * from cart where buyer_num=#{num}
	</select>
	<select id="selectAllPro" parameterType="cartvo" resultType="pronboardvo">
		select * from pro where code=#{code}
	</select>
	
	<insert id="insert" parameterType="cartvo">
		insert into cart values(#{buyer_num}, #{pro_code},#{count})
	</insert>
</mapper>